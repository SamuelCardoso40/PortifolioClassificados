
CREATE TABLE Tb_Usuario (
                ID_Usuario VARCHAR(8) NOT NULL,
                Nome_Usuario VARCHAR(50),
                PRIMARY KEY (ID_Usuario)
);


CREATE TABLE Tb_Noticias (
                ID_Noticias VARCHAR(8) NOT NULL,
                NLocal VARCHAR (200),
                Nacional VARCHAR (200),
                Mundial VARCHAR (200),
                ID_Usuario VARCHAR(11) NOT NULL,
                PRIMARY KEY (ID_Noticias)
);


CREATE TABLE Tb_Anunciante (
                Cod_Anunciante VARCHAR(11) NOT NULL,
                CPF VARCHAR(11) NOT NULL,
                Nome VARCHAR(50) NOT NULL,
                email VARCHAR(50),
                Telefone DECIMAL(11),
                Nome_Empresa VARCHAR (50) NOT NULL,
                Rua VARCHAR(50) NOT NULL,
                Bairro VARCHAR(50),
                Cidade VARCHAR(30) NOT NULL,
                Numero VARCHAR(6) NOT NULL,
                PRIMARY KEY (Cod_Anunciante, CPF)
);


CREATE TABLE Tb_Produtos (
                ID_Produtos VARCHAR(11) NOT NULL,
                Cod_Anunciante VARCHAR(11) NOT NULL,
                CPF VARCHAR(11) NOT NULL,
                Tipo_Produto VARCHAR(30) NOT NULL,
                Valor_Produtos DECIMAL (6) NOT NULL,
                ID_Usuario VARCHAR(11) NOT NULL,
                PRIMARY KEY (ID_Produtos, Cod_Anunciante, CPF)
);


CREATE TABLE Tb_Servico (
                ID_servico VARCHAR(11) NOT NULL,
                Cod_Anunciante VARCHAR(11) NOT NULL,
                CPF VARCHAR(11) NOT NULL,
                Tipo_Servico VARCHAR(30) NOT NULL,
                Valor_Servico DECIMAL (6) NOT NULL,
                ID_Usuario VARCHAR(11) NOT NULL,
                PRIMARY KEY (ID_servico, Cod_Anunciante, CPF)
);


ALTER TABLE Tb_Servico ADD CONSTRAINT tb_usuario_tb_servico_fk
FOREIGN KEY (ID_Usuario)
REFERENCES Tb_Usuario (ID_Usuario)
ON DELETE NO ACTION
ON UPDATE NO ACTION;

ALTER TABLE Tb_Produtos ADD CONSTRAINT tb_usuario_tb_produtos_fk
FOREIGN KEY (ID_Usuario)
REFERENCES Tb_Usuario (ID_Usuario)
ON DELETE NO ACTION
ON UPDATE NO ACTION;

ALTER TABLE Tb_Noticias ADD CONSTRAINT tb_usuario_tb_noticias_fk
FOREIGN KEY (ID_Usuario)
REFERENCES Tb_Usuario (ID_Usuario)
ON DELETE NO ACTION
ON UPDATE NO ACTION;

ALTER TABLE Tb_Servico ADD CONSTRAINT tb_anunciante_tb_servico_fk
FOREIGN KEY (CPF, Cod_Anunciante)
REFERENCES Tb_Anunciante (CPF, Cod_Anunciante)
ON DELETE NO ACTION
ON UPDATE NO ACTION;

ALTER TABLE Tb_Produtos ADD CONSTRAINT tb_anunciante_tb_produtos_fk
FOREIGN KEY (CPF, Cod_Anunciante)
REFERENCES Tb_Anunciante (CPF, Cod_Anunciante)
ON DELETE NO ACTION
ON UPDATE NO ACTION;